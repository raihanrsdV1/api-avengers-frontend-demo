pipeline {
    agent any
    
    environment {
        APP_NAME = 'ci-cd-demo-app'
        APP_VERSION = '1.0.0'
        DOCKER_IMAGE = "${APP_NAME}:${APP_VERSION}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Checking out code...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                echo 'üî® Building application...'
                dir('app') {
                    sh 'npm install'
                    echo '‚úÖ Dependencies installed'
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'üß™ Running unit tests...'
                dir('app') {
                    sh 'npm test'
                    echo '‚úÖ Tests passed'
                }
            }
        }
        
        stage('Package') {
            steps {
                echo 'üì¶ Building Docker image...'
                script {
                    sh """
                        docker build -t ${DOCKER_IMAGE} ./app
                        docker tag ${DOCKER_IMAGE} ${APP_NAME}:latest
                    """
                    echo "‚úÖ Docker image built: ${DOCKER_IMAGE}"
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'üöÄ Deploying application...'
                script {
                    sh '''
                        docker-compose down || true
                        docker-compose up -d
                    '''
                    echo '‚úÖ Application deployed'
                }
            }
        }
        
        stage('Health Check') {
            steps {
                echo 'üè• Verifying application health...'
                script {
                    sh 'chmod +x healthcheck.sh'
                    sh './healthcheck.sh'
                    echo '‚úÖ Health check passed!'
                }
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
            echo "Application is running at: http://localhost:3000"
            echo "Health endpoint: http://localhost:3000/health"
        }
        failure {
            echo '‚ùå Pipeline failed!'
            sh 'docker-compose logs || true'
        }
        always {
            echo 'üßπ Cleaning up...'
            sh 'docker system prune -f || true'
        }
    }
}